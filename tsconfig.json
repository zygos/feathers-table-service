{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",

  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "module": "commonjs",

    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,

    "outDir": "./dist"
  },

  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  "types": "index.d.ts"
}